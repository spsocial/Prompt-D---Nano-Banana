// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for tracking unique users
model User {
  id            String    @id @default(cuid())
  userId        String    @unique

  // NextAuth fields
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  firstSeen     DateTime  @default(now())
  lastActive    DateTime  @updatedAt
  totalGenerated Int      @default(0)
  totalSpent    Float    @default(0)
  credits       Int      @default(0)  // User's current credits
  creditsUsed   Int      @default(0)  // Total credits used (images)
  videosGenerated Int    @default(0)  // Total videos generated
  videoCreditsUsed Int   @default(0)  // Total credits used for videos
  voicesGenerated Int    @default(0)  // Total voices generated
  voiceCreditsUsed Int   @default(0)  // Total credits used for voices

  // Affiliate fields
  referralCode       String?   @unique  // รหัสแนะนำของตัวเอง (เช่น "PDSTUDIO-ABC123")
  referredBy         String?              // ถูกแนะนำโดยใคร (referralCode ของคนแนะนำ)
  referredByUser     User?     @relation("Referrals", fields: [referredBy], references: [referralCode], onDelete: SetNull)

  // ค่าคอมมิชชั่นที่ได้รับ (เป็นนายหน้า)
  totalCommission    Float     @default(0)  // เงินคอมรวมตลอดกาล (บาท)
  pendingCommission  Float     @default(0)  // คอมที่รอถอน (บาท)
  withdrawnCommission Float    @default(0)  // คอมที่ถอนไปแล้ว (บาท)

  // จำนวนคนที่แนะนำมา
  referralCount      Int       @default(0)  // จำนวนคนที่ signup ผ่าน link
  activeReferrals    Int       @default(0)  // คนที่ซื้อ credits แล้ว

  // Relations
  accounts      Account[]
  sessions      Session[]
  transactions  Transaction[]
  images        ImageGeneration[]
  videos        VideoGeneration[]

  // Affiliate relations
  referredUsers      User[]       @relation("Referrals")
  commissions        Commission[]
  withdrawals        Withdrawal[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([email])
  @@index([lastActive])
  @@index([referralCode])
  @@index([referredBy])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth Verification Token model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Transaction model for payment tracking
model Transaction {
  id            String   @id @default(cuid())
  transactionId String   @unique
  userId        String
  amount        Float
  packageName   String
  status        String   @default("completed")

  // Affiliate tracking
  referredBy           String?  // referralCode ของคนแนะนำ (ถ้ามี)
  commissionGenerated  Boolean  @default(false) // สร้าง commission แล้วหรือยัง

  // Relations
  user          User     @relation(fields: [userId], references: [userId])

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([referredBy])
}

// Image generation tracking
model ImageGeneration {
  id            String   @id @default(cuid())
  userId        String
  style         String   // For backward compatibility with old Banana AI style-based generation
  model         String?  // nano-banana, nano-banana-pro (new field)
  prompt        String?  @db.Text
  aspectRatio   String?  // Aspect ratio (e.g., 1:1, 16:9)
  resolution    String?  // For Nano Banana PRO: 1K, 2K, 4K
  creditsUsed   Int      @default(1) // Credits used (1 for Nano Banana, 3 for Nano Banana PRO)
  apiCost       Float    @default(0) // API cost in baht (0.5 for Nano Banana, 4 for Nano Banana PRO)
  success       Boolean  @default(true)

  // Relations
  user          User     @relation(fields: [userId], references: [userId])

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([style])
  @@index([model])
  @@index([createdAt])
  @@index([success])
}

// Video generation tracking
model VideoGeneration {
  id            String   @id @default(cuid())
  userId        String
  model         String   // sora-2, sora-2-hd, veo3-fast
  mode          String   // text-to-video, image-to-video
  prompt        String?  @db.Text
  duration      Int      // seconds
  aspectRatio   String   // 16:9, 9:16, 1:1
  creditsUsed   Int      // 10, 15, etc.
  success       Boolean  @default(true)

  // Relations
  user          User     @relation(fields: [userId], references: [userId])

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([model])
  @@index([createdAt])
  @@index([success])
}

// Video generation errors/failures
model VideoError {
  id            String   @id @default(cuid())
  userId        String
  model         String   // sora-2, sora-2-hd, veo3-fast
  mode          String   // text-to-video, image-to-video
  errorType     String   // timeout, api_error, content_violation, etc.
  errorMessage  String?  @db.Text
  creditsRefunded Int    // Credits that were refunded

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([model])
  @@index([errorType])
  @@index([createdAt])
}

// Pending video tasks (for handling timeouts and background processing)
model PendingVideo {
  id            String   @id @default(cuid())
  userId        String
  taskId        String   @unique  // KIE.AI task ID
  model         String   // sora-2, sora-2-pro, etc.
  mode          String   // text-to-video, image-to-video
  prompt        String?  @db.Text
  sourceImage   String?  @db.Text // Base64 image for image-to-video
  duration      Int      // 10 or 15 seconds
  aspectRatio   String   // 16:9, 9:16, 1:1
  creditsUsed   Int      // Credits deducted
  status        String   @default("pending") // pending, processing, completed, failed, cancelled
  videoUrl      String?  @db.Text // URL when completed
  error         String?  @db.Text // Error message if failed
  lastChecked   DateTime @default(now()) // Last status check time

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([taskId])
  @@index([status])
  @@index([createdAt])
}

// Daily statistics (aggregated data)
model DailyStats {
  id            String   @id @default(cuid())
  date          DateTime @unique @db.Date
  newUsers      Int      @default(0)
  activeUsers   Int      @default(0)
  totalImages   Int      @default(0)

  // Image generation tracking by model
  imagesNanoBanana    Int   @default(0)  // Regular Nano Banana (1 credit, 0.5 baht cost)
  imagesNanoBananaPro Int   @default(0)  // Nano Banana PRO (3 credits, 4 baht cost)

  totalVideos   Int      @default(0)
  videosSora2   Int      @default(0)
  videosSora2HD Int      @default(0)
  videosVeo3    Int      @default(0)
  videoErrors   Int      @default(0)
  totalRevenue  Float    @default(0)
  totalTransactions Int  @default(0)

  // API Costs tracking
  apiCostImages Float    @default(0)  // Total API cost for images (in baht)
  apiCostVideos Float    @default(0)  // Total API cost for videos (in baht)

  // Voice TTS tracking
  totalVoices   Int      @default(0)  // Total voice generations
  voicesGemini  Int      @default(0)  // Gemini voices (1 credit)
  voicesElevenlabs Int   @default(0)  // ElevenLabs voices (2-6 credits)
  voicesTier2   Int      @default(0)  // 2 credits (1-200 chars)
  voicesTier3   Int      @default(0)  // 3 credits (201-400 chars)
  voicesTier4   Int      @default(0)  // 4 credits (401-600 chars)
  voicesTier5   Int      @default(0)  // 5 credits (601-800 chars)
  voicesTier6   Int      @default(0)  // 6 credits (801-1000 chars)
  voiceErrors   Int      @default(0)  // Failed voice generations
  apiCostVoices Float    @default(0)  // Total API cost for voices (in baht)

  createdAt     DateTime @default(now())

  @@index([date])
}

// Monthly statistics
model MonthlyStats {
  id            String   @id @default(cuid())
  month         String   @unique // Format: YYYY-MM
  totalUsers    Int      @default(0)
  activeUsers   Int      @default(0)
  totalImages   Int      @default(0)

  // Image generation tracking by model
  imagesNanoBanana    Int   @default(0)  // Regular Nano Banana (1 credit, 0.5 baht cost)
  imagesNanoBananaPro Int   @default(0)  // Nano Banana PRO (3 credits, 4 baht cost)

  totalVideos   Int      @default(0)
  videosSora2   Int      @default(0)
  videosSora2HD Int      @default(0)
  videosVeo3    Int      @default(0)
  videoErrors   Int      @default(0)
  totalRevenue  Float    @default(0)
  totalTransactions Int  @default(0)

  // API Costs tracking
  apiCostImages Float    @default(0)  // Total API cost for images (in baht)
  apiCostVideos Float    @default(0)  // Total API cost for videos (in baht)

  // Voice TTS tracking
  totalVoices   Int      @default(0)  // Total voice generations
  voicesGemini  Int      @default(0)  // Gemini voices (1 credit)
  voicesElevenlabs Int   @default(0)  // ElevenLabs voices (2-6 credits)
  voicesTier2   Int      @default(0)  // 2 credits (1-200 chars)
  voicesTier3   Int      @default(0)  // 3 credits (201-400 chars)
  voicesTier4   Int      @default(0)  // 4 credits (401-600 chars)
  voicesTier5   Int      @default(0)  // 5 credits (601-800 chars)
  voicesTier6   Int      @default(0)  // 6 credits (801-1000 chars)
  voiceErrors   Int      @default(0)  // Failed voice generations
  apiCostVoices Float    @default(0)  // Total API cost for voices (in baht)

  createdAt     DateTime @default(now())

  @@index([month])
}

// Commission model - ค่าคอมมิชชั่นที่นายหน้าได้รับ
model Commission {
  id            String   @id @default(cuid())
  commissionId  String   @unique @default(cuid())

  // ใครได้รับค่าคอม (นายหน้า)
  affiliateId   String   // userId ของนายหน้า
  affiliate     User     @relation(fields: [affiliateId], references: [userId], onDelete: Cascade)

  // มาจากใคร (คนที่ถูกแนะนำ)
  referredUserId String  // userId ของคนที่ถูกแนะนำ
  referredUserName String? // ชื่อของคนที่ถูกแนะนำ (สำหรับแสดงผล)

  // ข้อมูล Transaction
  transactionId String  // อ้างอิงจาก Transaction.transactionId
  packageName   String  // แพ็คเกจที่ซื้อ (เช่น "Popular", "Pro")
  packageAmount Float   // ราคาแพ็ค (บาท)

  // ค่าคอมมิชชั่น
  commissionRate Float  @default(0.05) // อัตราค่าคอม (5% = 0.05)
  commissionAmount Float              // จำนวนเงินคอม (บาท)

  // สถานะ
  status        String  @default("pending") // pending, approved, paid
  approvedAt    DateTime?
  paidAt        DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([affiliateId])
  @@index([referredUserId])
  @@index([status])
  @@index([createdAt])
}

// Withdrawal model - การถอนเงินค่าคอม
model Withdrawal {
  id            String   @id @default(cuid())
  withdrawalId  String   @unique

  // ข้อมูลผู้ถอน
  userId        String
  user          User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  // จำนวนเงิน
  amount        Float    // จำนวนเงินที่ถอน (บาท)

  // ข้อมูลบัญชีธนาคาร
  bankName      String   // ชื่อธนาคาร
  bankAccount   String   // เลขบัญชี
  accountName   String   // ชื่อบัญชี

  // สถานะ
  status        String   @default("pending") // pending, processing, completed, rejected
  slipUrl       String?  @db.Text // URL หลักฐานการโอน (ถ้ามี)
  note          String?  @db.Text // หมายเหตุจาก admin

  // วันที่
  requestedAt   DateTime @default(now())
  processedAt   DateTime?
  completedAt   DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([requestedAt])
}

// Voice model - เสียง TTS สำหรับระบบ
model Voice {
  id            String   @id @default(cuid())
  voiceId       String   @unique  // ElevenLabs Voice ID
  name          String              // ชื่อเสียง (เช่น "เสียงกวนทีน")
  provider      String   @default("elevenlabs") // elevenlabs, gemini
  gender        String              // male, female, neutral
  description   String?  @db.Text   // คำอธิบายเสียง
  previewUrl    String?  @db.Text   // URL ไฟล์เสียงตัวอย่าง (Cloudinary)
  isActive      Boolean  @default(true) // เปิดใช้งานหรือไม่
  sortOrder     Int      @default(0)    // ลำดับการแสดงผล

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([provider])
  @@index([gender])
  @@index([isActive])
  @@index([sortOrder])
}

// Voice generation tracking (for analytics)
model VoiceGeneration {
  id            String   @id @default(cuid())
  userId        String
  voice         String              // Voice name/ID
  provider      String              // "gemini" or "elevenlabs"
  textLength    Int                 // Length of text (characters)
  creditsUsed   Int                 // Credits used (1, 2, 3, 4, 5, or 6)
  revenue       Float               // Revenue = creditsUsed * 1 baht
  apiCost       Float               // Actual API cost (for reference)
  profit        Float               // Fixed profit based on tier
  profitMargin  Float               // Profit percentage
  success       Boolean  @default(true)

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([provider])
  @@index([creditsUsed])
  @@index([createdAt])
}

// Voice generation errors/failures
model VoiceError {
  id            String   @id @default(cuid())
  userId        String
  voice         String              // Voice name/ID
  provider      String              // "gemini" or "elevenlabs"
  errorType     String              // api_error, rate_limit, invalid_input, etc.
  errorMessage  String?  @db.Text
  creditsRefunded Int               // Credits that were refunded

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([provider])
  @@index([errorType])
  @@index([createdAt])
}

// Chat token usage tracking (for AI Chat rate limiting)
model ChatTokenUsage {
  id            String   @id @default(cuid())
  userId        String
  model         String   @default("gemini-2.0-flash") // Model name: gemini-2.0-flash, gemini-2.5-flash
  date          String              // Format: YYYY-MM-DD
  tokensUsed    Int      @default(0) // Total requests used today

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, model, date])
  @@index([userId])
  @@index([model])
  @@index([date])
}

// Chat unlock tracking (paid packages for AI Chat)
model ChatUnlock {
  id            String   @id @default(cuid())
  userId        String
  packageType   String   // "flash_only", "both_models", "unlimited_24h"
  creditsUsed   Int      // 1, 2, or 5 credits

  // For "flash_only" and "both_models": bonus requests granted
  flashBonus    Int      @default(0) // +30 requests for flash
  proBonus      Int      @default(0) // +5 requests for pro

  // For "unlimited_24h": time-based access
  unlimitedUntil DateTime? // When unlimited access expires (24h from purchase)

  // Hidden spam protection tracking
  dailyRequestCount Int  @default(0) // Count requests today (hidden limit: 200)

  createdAt     DateTime @default(now())
  expiresAt     DateTime? // For time-limited packages

  @@index([userId])
  @@index([packageType])
  @@index([unlimitedUntil])
  @@index([createdAt])
}